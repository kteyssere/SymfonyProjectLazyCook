{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <h4 style="text-align: center; margin-top: 70px; margin-bottom: 40px">S'inscrire</h4>

    <div style="border: solid 1px black; font-weight: bold; font-size: 20px; padding: 5px; width: 400px; margin-left: auto; margin-right: auto; text-align: center; margin-bottom: 70px;">
        {{ form_errors(form) }}
        <div style="margin-left: 10px;">
            <p style="font-size: 14px; margin-top: 30px;">Nom d'utilisateur :</p>
            {{ form_widget(form.name) }}
        </div>
        <div style="margin-left: 10px;">
            <p style="font-size: 14px; margin-top: 30px;">Adresse mail :</p>
            {{ form_widget(form.mail) }}
        </div>
        <div style="margin-left: 10px;">
            <p style="font-size: 14px; margin-top: 30px;">Mot de passe :</p>
            {{ form_widget(form.password.first) }}
        </div>
        <div style="margin-left: 10px;">
            <p style="font-size: 14px; margin-top: 30px;">Confirmer le mot de passe :</p>
            {{ form_widget(form.password.second) }}
        </div>

        <div style="text-align: center; margin-top: 50px; margin-bottom: 30px;">
            <button class="btn" style="background-color: black; color: white; font-size: 14px;">{{ button_label|default('Inscription') }}</button>
        </div>
    </div>

{#    {{ include('user/_form.html.twig') }}#}

{#    <a href="{{ path('app_user_index') }}">back to list</a>#}
    {{ form_end(form) }}
{% endblock %}
{% block footer %}
    <div style="background-color: lightgray; height: auto; width: auto; border: solid 1px black; padding: 50px;">
        <p style="text-align: center; color: black; border: double 4px black; width: 700px; padding: 10px; background-color: white; margin-left: auto; margin-right: auto;">By Karina TEYSSERE & Brandon REYNIER | Â© 2022 LazyMates, Inc. <br>Nous contacter : admin@admin.fr</p>
    </div>
{% endblock %}
