{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Picture</th>
            <th>Ingredients</th>
            <th>Utensils</th>
            <th>PreparationTime</th>
            <th>Difficulty</th>
            <th>Name</th>
            <th>Content</th>
            <th>NumberOfPerson</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.picture }}</td>
                <td>{{ recipe.ingredients }}</td>
                <td>{{ recipe.utensils }}</td>
                <td>{{ recipe.preparationTime }}</td>
                <td>{{ recipe.difficulty }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.content }}</td>
                <td>{{ recipe.numberOfPerson }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_new') }}">Create new</a>
{% endblock %}
