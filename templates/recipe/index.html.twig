{% extends 'base.html.twig' %}

{% block title %}Les recettes{% endblock %}

{% block body %}

    <h1>Recipe index</h1>

    {{ form_start(form) }}
    {{ form_rest(form) }}
    <input type="submit" value="Rechercer" />
    {{ form_end(form) }}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Ingredients</th>
                <th>Utensils</th>
                <th>PreparationTime</th>
                <th>Difficulty</th>
                <th>Name</th>
                <th>Content</th>
                <th>NumberOfPerson</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

    {% if is_granted('ROLE_ADMIN') %}
        <div style="text-align: center; margin-top: 30px;">
            <a href="{{ path('app_recipe_new') }}">Cr√©er une nouvelle recette</a>
        </div>
    {% endif %}
    <div class="grille">

        {% for recipe in recipes %}
        <div class="grid-item">
            <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}"><img id="product_img" src="/upload/{{ recipe.picture }}" style="border-radius: 10px 10px 0px 0px;"/></a>
            <p class="p">{{ recipe.name }} - {{ recipe.numberOfPerson }}<img src="/img/nbperson.png" style="height: 15px; width: 15px; margin-bottom: 5px;"> - {{ recipe.preparationTime }}min<img src="/img/time.png" style="height: 15px; width: 15px; margin-bottom: 5px;"></p>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">Voir</a>
                <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">Modifier</a>
            {% endif %}
        </div>

        {% else %}
            <p style="text-align: center; margin-top: 100px; margin-left: auto; margin-right: auto;">Aucunes recettes :-(</p>
        {% endfor %}
    </div>



